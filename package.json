{
  "name": "ff-service",
  "private": true,
  "workspaces": ["apps/api", "apps/web", "packages/sdk", "packages/shared"],
  "scripts": {
    "dev": "concurrently -n api,web -c green,blue \"npm:dev:api\" \"npm:dev:web\"",
    "dev:api": "npm --workspace apps/api run dev",
    "dev:web": "npm --workspace apps/web run dev",
    "build": "npm -w apps/api run build && npm -w apps/web run build && npm -w packages/sdk run build",
    "format": "prettier -w .",
    "lint": "eslint ."
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
